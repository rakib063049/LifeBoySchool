<div class="row">
  <div class="col-lg-12">

    <h1>Listing schools</h1>

    <div class="table-responsive">
      <table class="table table-bordered table-hover data-table">
        <thead>
        <tr>
          <th>Year</th>
          <th>Unique</th>
          <th>Country</th>
          <th>Division</th>
          <th>District</th>
          <th>Thana</th>
          <th>Union</th>
          <th>Title</th>
          <th>Headmaster name</th>
          <th>Phone</th>
          <th>Boyes</th>
          <th>Girls</th>
          <th>Created by</th>
          <th></th>
          <th></th>
          <th></th>
        </tr>
        </thead>

        <tbody>
        <% @schools.each do |school| %>
            <tr>
              <td><%= school.year %></td>
              <td><%= school.unique_id %></td>
              <td><%= school.state %></td>
              <td><%= school.division.name %></td>
              <td><%= school.district.name %></td>
              <td><%= school.thana.name %></td>
              <td><%= school.union.name %></td>
              <td><%= link_to school.title, school, :class => 'text-info', :target => '_blank' %></td>
              <td><%= school.headmaster_name %></td>
              <td><%= school.phone %></td>
              <td><%= school.boys %></td>
              <td><%= school.girls %></td>
              <td><%= school.user.try(:name) %></td>
              <td><%= link_to 'Visit School', new_visit_path(school_id: school) %></td>
              <td><%= link_to 'Edit', edit_school_path(school) %></td>
              <td><%= link_to 'Destroy', school, method: :delete, data: {confirm: 'Are you sure?'} %></td>
            </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to 'New School', new_school_path, :class => "btn btn-sm btn-primary" %>
  </div>
</div>

